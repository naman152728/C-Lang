// C program to check even or odd number using switch case

#include<stdio.h>

int main () {

    int num;

    printf("Enter the value for Num: ");
    scanf("%d", &num);

    switch (num % 2 == 0)
    {
        case 0:
        printf("%d is a ODD No.", num);
        break;

        case 1:
        printf("%d is an EVEN No.", num);
        break;
    }    

    return 0;
}
