// C Program to Print All Negative Elements in Array.

#include <stdio.h>

int main ()
{
    int n, num[100], i;

    printf("Enter the No. of Elements for an Array: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("Enter the Value for Num%d: ", i+1);
        scanf("%d", &num[i]);
    }

    printf("\nDisplaying No.\n\n");
    printf("\nAll negative elements in array are : ");
    
     for(i=0; i<n; i++)
    {
        /* If current array element is negative */
        if(num[i] < 0)
        {
            printf("%d\t", num[i]);
        }
    }

    return 0;
}
