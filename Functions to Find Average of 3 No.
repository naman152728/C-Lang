// Write a program using Functions to find average of 3 No.

#include <stdio.h>
float average (float num1, float num2, float num3);

int main ()
{
    float num1, num2, num3, result;

    printf("Enter 3 values: ");
    scanf("%f%f%f", &num1, &num2, &num3);

    result = average(num1, num2, num3);
    printf("The Average is: %.2f", result);

    return 0; 
}

float average (float num1, float num2, float num3)
{
    float sum = 0;
    sum = num1 + num2 + num3;
    
    float aver = sum / 3;

    return aver;
}
