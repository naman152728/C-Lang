// C Program to Print all Natural No. from 1 to n using Recursion

#include <stdio.h>
#include <stdlib.h>

void natural (int num1, int num2);

int main ()
{
    int num1, num2, i;

    printf("Enter the Value for Lower Num: ");
    scanf("%d", &num1);

    printf("Enter the Value for Higher Num: ");
    scanf("%d", &num2);

    natural (num1, num2);

    for(i = num1; i <= num2; ++i)
    {
        printf("\t%d", i);
    }

    return 0;
}

void natural (int num1, int num2)
{
    if(num1 >= num2)
    {
        printf("Error!! Enter only a Positive No. & Greater No. Only");
        exit(0);
    }
    else
    {
        printf("The No. are: ");
    }
}
