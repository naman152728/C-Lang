#include<stdio.h>

int main () {
    
    int a, b, c;

    printf("Enter the sides for a, b, c:\n");
    scanf("%d %d %d", &a, &b, &c);

    if ( (a + b) > c )
    {
        if ( (b + c) > a )
        {
            if ( (c + a) > b )
            {
                printf("The Triangle is valid");
            }
           else 
           {
               printf("The Triangle is Invalid");
           }
        }
         else 
           {
               printf("The Triangle is Invalid");
           }
    }
     else 
           {
               printf("The Triangle is Invalid");
           }

    return 0;
}
