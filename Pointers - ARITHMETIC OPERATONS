// C Program to ADD the Sum of the Two No. Using Poitners

#include <stdio.h>

int main()
{
    float num1, num2, *pnum1, *pnum2;

    printf("Enter the value for Num1: ");
    scanf("%f", &num1);

    printf("Enter the Value for Num2: ");
    scanf("%f",&num2);

    pnum1 = &num1;
    pnum2 = &num2;

    printf("The Sum of %.2f & %.2f is: %.2f ", *pnum1, *pnum2, *pnum1 + *pnum2);

    return 0;
}


// C Program to SUBTRACT the Dff. of the Two No. Using Poitners

#include <stdio.h>

int main()
{
    float num1, num2, *pnum1, *pnum2;

    printf("Enter the value for Num1: ");
    scanf("%f", &num1);

    printf("Enter the Value for Num2: ");
    scanf("%f",&num2);

    pnum1 = &num1;
    pnum2 = &num2;

    printf("The Diff. of %.2f & %.2f is: %.2f ", *pnum1, *pnum2, *pnum1 - *pnum2);

    return 0;
}


// C Program to MULTIPLY the Prod. of the Two No. Using Poitners

#include <stdio.h>

int main()
{
    float num1, num2, *pnum1, *pnum2;

    printf("Enter the value for Num1: ");
    scanf("%f", &num1);

    printf("Enter the Value for Num2: ");
    scanf("%f",&num2);

    pnum1 = &num1;
    pnum2 = &num2;

    printf("The Prod. of %.2f & %.2f is: %.2f ", *pnum1, *pnum2, *pnum1 * *pnum2);

    return 0;
}


// C Program to DIVIDE the Division. of the Two No. Using Poitners

#include <stdio.h>

int main()
{
    float num1, num2, *pnum1, *pnum2;

    printf("Enter the value for Num1: ");
    scanf("%f", &num1);

    printf("Enter the Value for Num2: ");
    scanf("%f",&num2);

    pnum1 = &num1;
    pnum2 = &num2;

    printf("The Diff. of %.2f & %.2f is: %.2f ", *pnum1, *pnum2, *pnum1 / *pnum2);

    return 0;
}

