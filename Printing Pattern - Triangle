 // Write a program to Print a Triangle
 
 #include <stdio.h>
 
 int main () {
 
 int num, row, col;
 
 printf("Enter the value for Num: ");
 scanf("%d", &num);
 
 for(row = 1; row <= num; row++)
 {
    for(col = 1; col <= num; col++)
    {
        if(col <= row)
        printf("*");
    }
    printf("\n");
 }
 
 return 0;
 }
 
 
 
